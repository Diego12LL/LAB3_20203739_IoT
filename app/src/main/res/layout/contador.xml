<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#85929E">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido al contador de los números primos"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:background="#D7BDE2 "
        android:gravity="center"
        android:padding="16dp"/>


    <LinearLayout
        android:id="@+id/seccion1"
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:layout_below="@id/titulo"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/textoHola"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:text="  Su primo es:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textoNumerosPrimos"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/seccion2"
        android:layout_width="match_parent"
        android:layout_height="271dp"
        android:layout_below="@id/seccion1"
        android:layout_marginTop="-6dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textoAscDesc"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:text="   Ascender/descender"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textoPausRein"
                android:layout_width="389dp"
                android:layout_height="wrap_content"
                android:text=" Pausar/Reiniciar"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/botosAscDesc"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="80dp"
                android:backgroundTint="#D7BDE2"
                android:text="Descender" />

            <Button
                android:id="@+id/botonReinPaus"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#D7BDE2"
                android:text="Pausar" />

        </LinearLayout>

        <TextView
            android:id="@+id/textoIndicador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Actualmente el contador está ascendiendo."
            android:textColor="#000000"
            android:textSize="13sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/seccion3"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_below="@id/seccion2"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <EditText
            android:id="@+id/editTextBusqueda"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Orden del primo"
            android:layout_marginEnd="60dp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/botonBuscar"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#D7BDE2"
            android:text="Buscar" />

    </LinearLayout>

</RelativeLayout>
